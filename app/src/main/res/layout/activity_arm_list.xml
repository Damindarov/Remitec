<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arm_list">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="38dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="39dp"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        app:layout_constraintStart_toEndOf="@+id/btnBack" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="39dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="205dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Количество раз:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plus3"
        android:layout_width="27dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/txtMinusAngle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plus7"
        android:layout_width="27dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/txtMinusAngle_stat"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <TextView
        android:id="@+id/plus2"
        android:layout_width="27dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="96dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plus4"
        android:layout_width="71dp"
        android:layout_height="46dp"
        android:layout_marginStart="52dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="MIN"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpMin" />

    <TextView
        android:id="@+id/plus9"
        android:layout_width="71dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="SEC"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSec" />

    <TextView
        android:id="@+id/plus8"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="STATIC"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <TextView
        android:id="@+id/plus11"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="CPM"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plus12"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="STATIC"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <TextView
        android:id="@+id/plus10"
        android:layout_width="27dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/txtpPlusAngle_stat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <EditText
        android:id="@+id/txtMinusAngle"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtMinusAngle_stat"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSec"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMinusAngle_stat" />

    <EditText
        android:id="@+id/txtQuantity"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtpPlusAngle"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/plus2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtpPlusAngle_stat"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtpMin"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpPlusAngle_stat" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />
</android.support.constraint.ConstraintLayout>